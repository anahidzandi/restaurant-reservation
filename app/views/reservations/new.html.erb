
<div class="text-center shadow-sm pt-3 bg-light">
  <h1>Resturant Booking</h1>
</div>

<div class="row mt-5 mx-4 ">
  <div class="col-12 col-md-8 col-lg-4 mx-auto">
    <div class="mb-2">
      <%= link_to reservations_path do %>
        <span>&larr;</span>
        <span>Back</span>
      <% end %>
    </div>
    <div class="card">
      <div class="card-header">
        <h1 class="text-center">New reservation</h1>
      </div>
      <div class="card-body">
        <%= render "form", reservation: @reservation %>
      </div>
    </div>
  </div>
</div>
